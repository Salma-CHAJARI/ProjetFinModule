<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.helpline.helplineActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:background="#FFDAE0"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/niama"
                 />

            <TextView
                android:id="@+id/title3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arima_madurai_extrabold"
                android:textStyle="bold"
                android:paddingVertical="20dp"
                android:text="Helpline"
                android:textAlignment="center"
                android:textColor="#D5006D"
                android:textSize="25sp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <!-- Kids Help Phone -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="8dp">

                    <TextView
                        android:id="@+id/kidsHelp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Kids Help Phone" />

                    <Button
                        android:id="@+id/kidsHelpCall"
                        android:layout_width="wrap_content"
                        android:background="#FFC0CB"
                        android:layout_height="wrap_content"
                        android:text="Call" />

                    <Button
                        android:id="@+id/kidsHelpVisit"
                        android:background="#FFC0CB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Visit" />
                </TableRow>

                <!-- Safe Haven Women Shelter -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="8dp">

                    <TextView
                        android:id="@+id/safeHaven"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Safe Haven Women Shelter" />

                    <Button
                        android:id="@+id/safeHavenCall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFC0CB"
                        android:text="Call" />

                    <Button
                        android:id="@+id/safeHavenVisit"
                        android:layout_width="wrap_content"
                        android:background="#FFC0CB"
                        android:layout_height="wrap_content"
                        android:text="Visit" />
                </TableRow>

                <!-- Trans Lifeline -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="8dp">

                    <TextView
                        android:id="@+id/transLifeline"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Trans Lifeline" />

                    <Button
                        android:id="@+id/transLifelineCall"
                        android:layout_width="wrap_content"

                        android:background="#FFC0CB"
                        android:layout_height="wrap_content"
                        android:text="Call" />

                    <Button
                        android:id="@+id/transLifelineVisit"
                        android:layout_width="wrap_content"
                        android:background="#FFC0CB"
                        android:layout_height="wrap_content"
                        android:text="Visit" />
                </TableRow>

                <!-- Chimo Helpline -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="8dp">

                    <TextView
                        android:id="@+id/chimoHelp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Chimo Helpline" />

                    <Button
                        android:id="@+id/chimoHelpCall"
                        android:layout_width="wrap_content"
                        android:background="#FFC0CB"
                        android:layout_height="wrap_content"
                        android:text="Call" />

                    <Button
                        android:id="@+id/chimoHelpVisit"
                        android:layout_width="wrap_content"
                        android:background="#FFC0CB"
                        android:layout_height="wrap_content"
                        android:text="Visit" />
                </TableRow>

                <!-- Some Other Solutions -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="8dp">

                    <TextView
                        android:id="@+id/someOther"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Some Other Solutions" />

                    <Button
                        android:id="@+id/someOtherCall"
                        android:layout_width="wrap_content"
                        android:background="#FFC0CB"
                        android:layout_height="wrap_content"
                        android:text="Call" />

                    <Button
                        android:id="@+id/someOtherVisit"
                        android:layout_width="wrap_content"
                        android:background="#FFC0CB"
                        android:layout_height="wrap_content"
                        android:text="Visit" />
                </TableRow>

                <!-- CMHA -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="8dp">

                    <TextView
                        android:id="@+id/cmha"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="CMHA" />

                    <Button
                        android:id="@+id/cmhaCall"
                        android:layout_width="wrap_content"
                        android:background="#FFC0CB"
                        android:layout_height="wrap_content"
                        android:text="Call" />

                    <Button
                        android:id="@+id/cmhaVisit"
                        android:layout_width="wrap_content"
                        android:background="#FFC0CB"
                        android:layout_height="wrap_content"
                        android:text="Visit" />
                </TableRow>

                <!-- Crisis Services Canada -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="8dp">

                    <TextView
                        android:id="@+id/crisisServices"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Crisis Services Canada" />

                    <Button
                        android:id="@+id/crisisServicesCall"
                        android:layout_width="wrap_content"
                        android:background="#FFC0CB"
                        android:layout_height="wrap_content"
                        android:text="Call" />

                    <Button
                        android:id="@+id/crisisServicesVisit"
                        android:layout_width="wrap_content"
                        android:background="#FFC0CB"
                        android:layout_height="wrap_content"
                        android:text="Visit" />
                </TableRow>

                <!-- Hope For Wellness -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="8dp">

                    <TextView
                        android:id="@+id/hopeForWellness"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Hope For Wellness" />

                    <Button
                        android:id="@+id/hopeForWellnessCall"
                        android:layout_width="wrap_content"
                    android:background="#FFC0CB"
                        android:layout_height="wrap_content"
                        android:text="Call" />

                    <Button
                        android:id="@+id/hopeForWellnessVisit"
                        android:layout_width="wrap_content"
                        android:background="#FFC0CB"
                        android:layout_height="wrap_content"
                        android:text="Visit" />
                </TableRow>

                <!-- NEDIC -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="8dp">

                    <TextView
                        android:id="@+id/nedic"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="NEDIC" />

                    <Button
                        android:id="@+id/nedicCall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFC0CB"
                        android:text="Call" />

                    <Button
                        android:id="@+id/nedicVisit"
                        android:layout_width="wrap_content"
                        android:background="#FFC0CB"
                        android:layout_height="wrap_content"
                        android:text="Visit" />
                </TableRow>

                <!-- Canada Drug Rehab -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="8dp">

                    <TextView
                        android:id="@+id/drugRehab"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Canada Drug Rehab" />

                    <Button
                        android:id="@+id/drugRehabCall"
                        android:layout_width="wrap_content"
                        android:background="#FFC0CB"
                        android:layout_height="wrap_content"
                        android:text="Call" />

                    <Button
                        android:id="@+id/drugRehabVisit"
                        android:layout_width="wrap_content"
                        android:background="#FFC0CB"
                        android:layout_height="wrap_content"
                        android:text="Visit" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>