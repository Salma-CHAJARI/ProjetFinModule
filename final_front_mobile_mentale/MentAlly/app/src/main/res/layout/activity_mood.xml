<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

        <RelativeLayout
            android:id="@+id/header_section"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#FFC0CB"
        android:paddingTop="30dp"
        android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="401dp"
                android:layout_height="73dp"
                android:layout_marginBottom="20dp"
                android:clickable="false"
                app:srcCompat="@drawable/niama" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:fontFamily="@font/arima_madurai_extrabold"
            android:text="Mood Tracker"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"/>

</RelativeLayout>

<ListView
android:id="@+id/moodlist"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_below="@id/header_section"
android:layout_marginTop="-40dp"
    android:backgroundTint="#FFDAE1"
android:layout_marginHorizontal="15dp"
android:layout_marginBottom="60dp"
android:background="@drawable/listviewbackground"/>

<Button
android:id="@+id/addmood"
android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="20dp"
    android:background="@drawable/plussign"
    android:backgroundTint="#EA1185"/>

<ProgressBar
android:id="@+id/progress_bar"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_centerInParent="true"
android:visibility="gone"/>

<TextView
android:id="@+id/empty_view"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_centerInParent="true"
android:text="No moods recorded yet"
android:textColor="#1A237E"
android:textSize="15sp"
android:visibility="gone"/>

    </RelativeLayout>